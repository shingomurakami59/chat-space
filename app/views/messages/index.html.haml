%div{class: "wrapper"}
  %div{class: "content-left"}
    %div{class: "user-name"}
      %p ログインユーザー名
      %i{class: "fa fa-edit"}
      %i{class: "fa fa-cog"}

    - for i in 1..3 do
      %div{class: "groups"}
        %p{class: "groups__name"} グループ一覧
        %p{class: "groups__message"} 最新チャット内容

  %div{class: "content-right"}
    %div{class: "group"}
      %p{class: "group__name"} グループ名
      %p{class: "group__member"} MEMBER: メンバー名
      %p{class: "group__btn"} Edit

    - for i in 1..3 do
      %div{class: "chat"}
        %p{class: "chat__user"} 各ユーザー名
        %p{class: "chat__date"} 各チャット送信日時
        %p{class: "chat__content"} 各チャット内容


      %div{class: "submit"}
        %p{class: "submit__content"} type a message
        %i{class: "fa fa-file-image-o"}
      %p{class: "bottom-btn"} Send
